<p id="notice"><%= notice %></p>

<h1>Transits</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Date delivered</th>
      <th>Sender string</th>
      <th>Description</th>
      <th>Comment</th>
      <th>Shipping weight</th>
      <th>Arrived</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transits.each do |transit| %>
      <tr>
        <td><%= transit.id %></td>
        <td><%= transit.date_delivered %></td>
        <td><%= transit.sender_string %></td>
        <td><%= transit.description %></td>
        <td><%= transit.comment %></td>
        <td><%= transit.shipping_weight %></td>
        <td><%= transit.arrived %></td>
        <td><%= link_to 'Show', transit %></td>
        <td><%= link_to 'Edit', edit_transit_path(transit) %></td>
        <td><%= link_to 'Destroy', transit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

