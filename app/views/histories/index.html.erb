<p id="notice"><%= notice %></p>

<h1>Histories</h1>

<table>
  <thead>
    <tr>
      <th>Date arrived pittsburgh</th>
      <th>Date delivered</th>
      <th>Date arrived qatar</th>
      <th>Sender</th>
      <th>Description</th>
      <th>Comment</th>
      <th>Shipping weight</th>
      <th>Discarded</th>
      <th>Delivered</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.date_arrived_pittsburgh %></td>
        <td><%= history.date_delivered %></td>
        <td><%= history.date_arrived_qatar %></td>
        <td><%= history.sender %></td>
        <td><%= history.description %></td>
        <td><%= history.comment %></td>
        <td><%= history.shipping_weight %></td>
        <td><%= history.discarded %></td>
        <td><%= history.delivered %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

